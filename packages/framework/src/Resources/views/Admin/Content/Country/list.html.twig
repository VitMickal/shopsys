{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Countries overview'|trans }}{% endblock %}

{% block h1 %}{{ 'Countries overview'|trans }}{% endblock %}

{% block main_content %}
    <div class="wrap-bar">
        <a href="{{ url('admin_country_new') }}" class="btn btn--plus wrap-bar__btn">
            <i class="btn__icon">+</i>
            {{ 'Create new country'|trans }}
        </a>
    </div>
    {{ gridView.render() }}

    {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            <button class="js-drag-and-drop-grid-submit-all btn btn--disabled" type="button">{{ 'Save changes in order'|trans }}</button>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block image_html %}
    <picture>
        {% spaceless %}
            {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ' ~ imageCssClass)|trim}) %}
            <img {% for attrname, attrvalue in attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %} itemprop="image" />
        {% endspaceless %}
        {% for additionalImageData in additionalImagesData %}
            <source media="{{ additionalImageData.media }}" srcset="{{ additionalImageData.url }}" />
        {% endfor %}
    </picture>
{% endblock %}
